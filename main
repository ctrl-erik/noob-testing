# Simple calculator by ctrl-erik

numberOne = float(input("Enter your first number: "))
operator = input("Enter you operator: ")
numberTwo = float(input("Enter your second number: "))

def calculator():
    if operator == "+":
        summity = numberOne + numberTwo
        return summity
    elif operator == "-":
        summity = numberOne - numberTwo
        return summity
    elif operator == "*":
        summity = numberOne * numberTwo
        return summity
    elif operator == "/":
        summity = numberOne / numberTwo
        return summity
    elif operator == "%":
        summity = numberOne % numberTwo
        return summity
    else:
        return print("That is an operator that I do not recognize.")

print(calculator())
